<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.google.android.as.overlay"
    android:versionCode="1"
    android:versionName="1.0">
    <overlay android:targetPackage="com.google.android.as" android:priority="1" />

    <application android:label="Live Caption Overlay" android:hasCode="false">
        <service android:enabled="true" android:exported="false" android:name="com.google.android.apps.miphone.aiai.captions.CaptionsForegroundService" android:process=":nonpersistent"/>
        <service android:enabled="true" android:exported="false" android:name="com.google.android.apps.miphone.aiai.captions.CaptionsService"/>
        <service android:enabled="true" android:exported="true" android:name="com.google.android.apps.miphone.aiai.captions.SystemCaptionsManagerService">
            <intent-filter>
                <action android:name="android.service.systemcaptions.SystemCaptionsManagerService"/>
            </intent-filter>
        </service>
        <service android:enabled="true" android:exported="true" android:label="@string/captions_live_caption_name" android:name="com.google.android.apps.miphone.aiai.captions.quicksetting.CaptionsTileService" android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE"/>
            </intent-filter>
        </service>
        <activity android:enabled="true" android:exported="true" android:label="@string/captions_live_caption_name" android:name="com.google.android.apps.miphone.aiai.captions.settingsui.settingsactivity.CaptionsSettingsActivity" android:process=":nonpersistent">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE_PREFERENCES"/>
            </intent-filter>
            <intent-filter>
                <action android:name="com.android.settings.action.IA_SETTINGS"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="com.android.settings.action.live_caption"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <meta-data android:name="com.android.settings.category" android:value="com.android.settings.category.ia.sound"/>
            <meta-data android:name="com.android.settings.summary" android:resource="@string/captions_settings_provider_summary"/>
            <meta-data android:name="com.android.settings.order" android:value="-110"/>
        </activity>
        <activity-alias android:enabled="true" android:exported="true" android:name="com.google.android.apps.miphone.aiai.captions.CaptionsSettingsActivity" android:targetActivity="com.google.android.apps.miphone.aiai.captions.settingsui.settingsactivity.CaptionsSettingsActivity"/>
    </application>
</manifest>
